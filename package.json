{
  "name": "abortable",
  "version": "0.0.0",
  "description": "Abortable promises",
  "main": "index.js",
  "author": {
    "name": "Overlook Motel"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/overlookmotel/abortable.git"
  },
  "bugs": {
    "url": "https://github.com/overlookmotel/abortable/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "jshint": "^2.9.5"
  },
  "keywords": [
    "abortable",
    "abort",
    "promise",
    "cancel",
    "halt",
    "stop",
    "throw",
    "interrupt",
    "thenable"
  ],
  "scripts": {
    "test": "npm run lint && npm run test-main",
    "lint": "jshint lib test",
    "test-main": "cross-env NODE_ENV=production jest",
    "cover": "npm run cover-main && rm -rf coverage",
    "coveralls": "npm run cover-main && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cover-main": "cross-env COVERAGE=true NODE_ENV=production jest --coverage",
    "ci": "if [ $COVERAGE ]; then npm run coveralls; else npm test; fi"
  },
  "engines": {
    "node": ">=8"
  },
  "readmeFilename": "README.md",
  "license": "MIT"
}
